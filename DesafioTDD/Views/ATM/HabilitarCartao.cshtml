@model DesafioTDD.DTO.HabilitarCartaoDTO;
@{
    ViewData["Title"] = "Ativação";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;900&family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="container">
        <div class="device">
            
            <div class="icon icon-ativar">
                <h3>Ativar cartão</h3>
                <div class="card-container">
                    <div class="card-body">
                        <div class="card-upper">
                            <div class="chip"></div>
                            <div class="wifi"></div>
                        </div>
                        <div class="card-bottom">
                            <div class="number">XXXX XXXX XXXX XXXX</div>
                            <div class="mastercard"></div>
                        </div>
                    </div>
                </div>
            </div>

            <form class="form-habilitar" asp-action="Salvar" asp-controller="HabilitarCartao" method="POST">
                <div class="mb-3">
                    <label asp-for="Numero" class="form-label" >Nº do Cartão</label>
                    <input asp-for="Numero" type="text" class="form-control" id="cardNumber" aria-describedby="cardNumber">
                    <div id="cardHelp" class="form-text"> Nossos cartões tem início 1895 e 3567.</div>
                    <span asp-validation-for="Numero" class="text-danger clearfix"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Senha" class="form-label">Criar senha</label>
                    <input asp-for="Senha" type="password" class="form-control">
                    <span asp-validation-for="Senha" class="text-danger clearfix"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmaSenha" class="form-label">Confirmar senha</label>
                    <input asp-for="ConfirmaSenha" type="password" class="form-control" id="exampleInputPassword1">
                    <span asp-validation-for="ConfirmaSenha" class="text-danger clearfix"></span>
                </div>
                
                <div class="form-btn mt-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancelar</a>
                    <button class="btn btn-primary">Ativar</button>
                </div>
                
            </form> 

                
        </div>
    </div>
</body>
</html>