@model DesafioTDD.DTO.AdminDTO;
@{
    ViewData["Title"] = "Acesso Administrativo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;900&family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/login.css">
    <title>Login Adm</title>
</head>
<body>
    <div class="container">
        <div class="device">
            
            <div class="icon">
                <h3>Acesso Administrador</h3>
                <img src="~/images/gears-gear-svgrepo-com.svg" class="mt-4 mb-4"></img>
            </div>

            <form asp-action="Admin" asp-controller="ATM" method="POST">
                <div class="mb-3">
                  <label asp-for="User" class="form-label" >Usu√°rio admin</label>
                  <input asp-for="User" type="text" class="form-control">
                  <span asp-validation-for="User" class="text-danger clearfix"></span>
                </div>
                <div class="mb-3">
                  <label asp-for="Senha" class="form-label">Senha</label>
                  <input asp-for="Senha" type="password" class="form-control" id="exampleInputPassword1">
                  <span asp-validation-for="User" class="text-danger clearfix"></span>
                </div>

                <div class="form-btn">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Voltar</a>
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
                
            </form> 
                
        </div>
    </div>
</body>
</html>