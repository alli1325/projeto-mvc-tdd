@model DesafioTDD.DTO.CaixaDTO;
@{
    ViewData["Title"] = "Acesso Administrativo";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;900&family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <!-- AJAX -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link rel="stylesheet" href="~/css/login.css">
    <title>Login Adm</title>
</head>
<body>
    <div class="container">
        <div class="device-admin">
            
            <div class="icon">
                <h3>Gerenciamento de c√©dulas</h3>
                <img src="~/images/money-svgrepo-com.svg" class="mt-4 mb-4"></img>
            </div>

            <form asp-action="Atualizar" asp-controller="Admin" method="POST">
                <div class="mb-3 row align-items-center">
                    <label asp-for="Ced100" class="form-label col" >$100</label>
                    <input asp-for="Ced100" type="number" class="form-control col" id="100" disabled>
                    <span asp-validation-for="Ced100" class="text-danger clearfix"></span>
                </div>
                <div class="mb-3 row align-items-center">
                    <label asp-for="Ced50" class="form-label col" >$50</label>
                    <input asp-for="Ced50" type="number" class="form-control col" id="50" disabled>
                    <span asp-validation-for="Ced50" class="text-danger clearfix"></span>
                  </div>
                  <div class="mb-3 row align-items-center">
                    <label asp-for="Ced20" class="form-label col" >$20</label>
                    <input asp-for="Ced20" type="number" class="form-control col" id="20" disabled>
                    <span asp-validation-for="Ced20" class="text-danger clearfix"></span>
                  </div>
                  <div class="mb-3 row align-items-center">
                    <label asp-for="Ced10" class="form-label col" >$10</label>
                    <input asp-for="Ced10" type="text" class="form-control col" id="10" disabled>
                    <span asp-validation-for="Ced10" class="text-danger clearfix"></span>
                  </div>
                  <div class="mb-3 row align-items-center">
                    <label asp-for="TotalString" class="form-label col" >Total</label>
                    <input asp-for="TotalString" type="text" class="form-control col" id="total" disabled>
                  </div>

                <div class="form-btn">
                    <a asp-action="AcessoAdm" asp-controller="ATM" id="sair" class="btn btn-danger">Sair</a>
                    <button class="btn btn-primary" id="editar" onclick="event.preventDefault(); 
                    $('#sair').attr('hidden', 'true');
                    $('#editar').attr('hidden', 'true');
                    $('#cancelar').removeAttr('hidden');
                    $('#salvar').removeAttr('hidden');
                    $('#100').removeAttr('disabled');
                    $('#50').removeAttr('disabled');
                    $('#20').removeAttr('disabled');
                    $('#10').removeAttr('disabled');"
                    >Editar</button>
                    <button class="btn btn-danger" id="cancelar" onclick="event.preventDefault(); 
                    $('#sair').removeAttr('hidden');
                    $('#editar').removeAttr('hidden');
                    $('#cancelar').attr('hidden', 'true');
                    $('#salvar').attr('hidden', 'true');
                    $('#100').attr('disabled', 'true');
                    $('#50').attr('disabled', 'true');
                    $('#20').attr('disabled', 'true');
                    $('#10').attr('disabled', 'true');"
                    hidden>Cancelar</button>
                    <button type="submit" class="btn btn-success" id="salvar" hidden>Salvar</button>
                </div>
                
            </form> 
                
        </div>
    </div>

    <script>
        function stopDefAction(evt) {
            evt.preventDefault();
        }
        
        document.getElementById('#editar').addEventListener(
            'click', () => {
                preventDefault();
                document.querySelector('#salvar').hidden = false
        });
        </script>
</body>
</html>