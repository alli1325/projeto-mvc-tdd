@model DesafioTDD.DTO.SaqueDTO;
@{
    ViewData["Title"] = "Deposito";
    var NumeroSemEspaco = @Model.Numero.Replace(" ", "");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;900&family=Poppins:wght@300;400;500;600;700&family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/index.css">
    <title>Meu Cartão</title>
</head>
<body>
    <div class="container">
        <div class="device">
            <div class="header">
                <a class="arrow" asp-action="Index" asp-controller="Home"></a>
            </div>
            <div class="cards">
                <div class="card">
                    <div class="card-body">
                        <div class="card-upper">
                            <div class="chip"></div>
                            <div class="wifi"></div>
                        </div>
                        <div class="card-bottom">
                            <div class="number">@Model.Numero</div>
                            <div class="mastercard"></div>
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <form  asp-action="Depositar" asp-controller="ATM">
                        <input type="hidden" name="numeroCartao" id="numeroCartao" value="@NumeroSemEspaco">
                        <button class="deposito btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="#FFF" class="bi bi-piggy-bank" viewBox="0 0 16 16">
                                <path d="M5 6.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0zm1.138-1.496A6.613 6.613 0 0 1 7.964 4.5c.666 0 1.303.097 1.893.273a.5.5 0 0 0 .286-.958A7.602 7.602 0 0 0 7.964 3.5c-.734 0-1.441.103-2.102.292a.5.5 0 1 0 .276.962z"/>
                                <path fill-rule="evenodd" d="M7.964 1.527c-2.977 0-5.571 1.704-6.32 4.125h-.55A1 1 0 0 0 .11 6.824l.254 1.46a1.5 1.5 0 0 0 1.478 1.243h.263c.3.513.688.978 1.145 1.382l-.729 2.477a.5.5 0 0 0 .48.641h2a.5.5 0 0 0 .471-.332l.482-1.351c.635.173 1.31.267 2.011.267.707 0 1.388-.095 2.028-.272l.543 1.372a.5.5 0 0 0 .465.316h2a.5.5 0 0 0 .478-.645l-.761-2.506C13.81 9.895 14.5 8.559 14.5 7.069c0-.145-.007-.29-.02-.431.261-.11.508-.266.705-.444.315.306.815.306.815-.417 0 .223-.5.223-.461-.026a.95.95 0 0 0 .09-.255.7.7 0 0 0-.202-.645.58.58 0 0 0-.707-.098.735.735 0 0 0-.375.562c-.024.243.082.48.32.654a2.112 2.112 0 0 1-.259.153c-.534-2.664-3.284-4.595-6.442-4.595zM2.516 6.26c.455-2.066 2.667-3.733 5.448-3.733 3.146 0 5.536 2.114 5.536 4.542 0 1.254-.624 2.41-1.67 3.248a.5.5 0 0 0-.165.535l.66 2.175h-.985l-.59-1.487a.5.5 0 0 0-.629-.288c-.661.23-1.39.359-2.157.359a6.558 6.558 0 0 1-2.157-.359.5.5 0 0 0-.635.304l-.525 1.471h-.979l.633-2.15a.5.5 0 0 0-.17-.534 4.649 4.649 0 0 1-1.284-1.541.5.5 0 0 0-.446-.275h-.56a.5.5 0 0 1-.492-.414l-.254-1.46h.933a.5.5 0 0 0 .488-.393zm12.621-.857a.565.565 0 0 1-.098.21.704.704 0 0 1-.044-.025c-.146-.09-.157-.175-.152-.223a.236.236 0 0 1 .117-.173c.049-.027.08-.021.113.012a.202.202 0 0 1 .064.199z"/>
                            </svg>
                            <span>Depositar</span>
                        </button>
                    </form>
                    <form  asp-action="Sacar" asp-controller="ATM">
                        <input type="hidden" name="numeroCartao" id="numeroCartao" value="@NumeroSemEspaco">
                        <button class="saque btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="#FFF" class="bi bi-currency-dollar" viewBox="0 0 16 16">
                                <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z"/>
                            </svg>
                            <span>Sacar</span>
                        </button>
                    </form>
                </div>
                <div class="funds">
                    <div>Saldo Disponível:</div>
                    <div class="amount">R$@Model.Saldo.ToString("0.00")</div>
                </div>
                <div class="transactions">
                    <h2>Saque</h2>
                    <form asp-action="Saque" asp-controller="MeuCartao" class="form-habilitar" method="POST">
                        <div class="mb-3 row align-items-center">
                            <input asp-for="Numero" type="Text" class="form-control col form-habilitar" id="100" value=@NumeroSemEspaco hidden>
                            <input asp-for="Saldo" type="number" class="form-control col" id="100" value=@Model.Saldo hidden>
                            <label asp-for="Valor" class="form-label col" >Valor</label>
                            <input asp-for="Valor"type="number" class="form-control col" id="100">
                            <span asp-validation-for="Valor" class="text-danger clearfix span-alert"></span>
                            <div id="deposito" class="form-text"></div>
                        </div>
                        <div class="form-btn">
                            <input type="hidden" name="numeroCartao" id="numeroCartao" value="@NumeroSemEspaco">
                            <button asp-action="Cancelar" asp-controller="MeuCartao" class="btn" id="cancelar">Cancelar</button>
                            <button class="btn" id="confirmar">Confirmar</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>